@using HMS.Models.Pages;
@model PagedList<Hotel>
@{
    Layout = "_PanelLayout";
}

<div id="content" class="col-sm-9  all-blog">
    <div class="breadcrumb-main">
        <div class="breadcrumb-container clearfix">
            <h1 class="page-title">Hotels</h1>
            <ul class="breadcrumb">
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li><a asp-action="Hotels" asp-controller="Hotel">Hotels</a></li>
            </ul>
        </div>
    </div>
    <a class="btn btn-sm btn-primary" asp-action="CreateOrUpdateHotel" asp-controller="Hotel">Add Hotel</a>
    <div class="information-information">
        <div class="text-center">
            @{
                ViewBag.searches = new string[] { "Name", "NameEng", "City", "CityEng", "Address", "AddressEng" };
                ViewBag.sorts = new string[] { "Name", "NameEng", "City", "CityEng", "Address", "AddressEng" };
            }
            @Html.Partial("PageOptions", Model)
            <div class="col-1 text-right">
                <a asp-action="Hotels" asp-controller="Hotel" class="btn btn-secondary">Reset</a>
            </div>
        </div>


        <div class="p-5 mb-4 bg-light rounded-3 ovx table-responsive">
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>NameEng</th>
                    <th>Description</th>
                    <th>DescriptionEng</th>
                    <th>City</th>
                    <th>CityEng</th>
                    <th>Address</th>
                    <th>AddressEng</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var hotel in Model)
                {
                    <tr data-rowid="@hotel.Id">
                        <td>@hotel.Name</td>
                        <td>@hotel.NameEng</td>
                        <td>@(hotel.Description.Length > 20 ? hotel.Description.Substring(0, 20) + "..." : hotel.Description)</td>
                        <td>@(hotel.DescriptionEng.Length > 20 ? hotel.DescriptionEng.Substring(0, 20) + "..." : hotel.DescriptionEng)</td>
                        <td>@hotel.City</td>
                        <td>@hotel.CityEng</td>
                        <td>@hotel.Address</td>
                        <td>@hotel.AddressEng</td>
                        <td><a class="btn btn-sm btn-primary" asp-action="CreateOrUpdateHotel" asp-controller="Hotel" asp-route-hotelId="@hotel.Id">Edit</a></td>
                        <td>
                            <button onclick="deleteHotel('@hotel.Id')" class="btn btn-sm btn-danger">Delete</button>
                        </td>
                    </tr>
                }
            </table>

            <div class="text-center">
                @await Html.PartialAsync("Pages", Model)
            </div>

            @await Html.PartialAsync("_Modal", "Delete selected hotel?")

            @section Scripts {
                <script>
                    async function deleteHotel(hotelId) {

                        const btnYes = document.getElementById('btn-Yes');
                        const btnNo = document.getElementById('btn-No');

                        $('#confirmModal').modal('show');

                        btnYes.onclick = () => {
                            const deleteItem = fetch(`/hotel/delete-hotel/?hotelId=${hotelId}`, { method: 'DELETE' })
                                .then(response => {
                                    if (!response.ok) {
                                        throw new Error('Network response was not ok');
                                    }
                                    document.querySelector("tr[data-rowid='" + hotelId + "']").remove();
                                    $('#confirmModal').modal('hide');
                                })
                                .catch(error => {
                                    console.error('There was a problem with the fetch operation:', error);
                                });
                        }
                        btnNo.onclick = () => {
                            $('#confirmModal').modal('hide');
                        }
                    }
                </script>
            }

        </div>


    </div>

</div>

