@model ResetPassword
@{
    ViewData["Title"] = "Reset Password Page";
}

@Html.Partial("_StylesPartial", Model)




<!-- My Account -->
<div class="blog-section">
    <div class="container">
        <div class="row">
            <div id="content" class="col-sm-9  all-blog my-account">
                <div class="breadcrumb-main">
                    <div class="breadcrumb-container clearfix">
                        <ul class="breadcrumb">
                            <li><a asp-action="Index" asp-controller="Home">Back to Home</a></li>
                            <li><a asp-action="Login" asp-controller="Account">Log In</a></li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <form asp-action="ResetPassword" asp-controller="Account" method="post" enctype="multipart/form-data" class="form-horizontal well">
                            <fieldset>
                                <legend>Reset Password</legend>
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group required">
                                    <label asp-for="Password" class="col-sm-2 control-label" >Password</label>
                                    <div class="col-sm-10">
                                        <input asp-for="Password" type="password"  placeholder="Password" class="form-control">
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group required">
                                    <label asp-for="ConfirmPassword" class="col-sm-2 control-label" >
                                        Password
                                        Confirm
                                    </label>
                                    <div class="col-sm-10">
                                        <input asp-for="ConfirmPassword" type="password" placeholder="Password Confirm"  class="form-control">
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <input type="hidden" asp-for="Email" class="form-control" />
                                <input type="hidden" asp-for="Token" class="form-control" />
                                <input type="submit" value="Reset Password" class="btn btn-primary">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- .My Account -->


@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await Html.PartialAsync("_ScriptsPartial")
}