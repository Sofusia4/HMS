@model string
@{
    ViewData["Title"] = "ForgotPassword Page";
}

@Html.Partial("_StylesPartial", Model)




<!-- My Account -->
<div class="blog-section">
    <div class="container">
        <div class="row">
            <div id="content" class="col-sm-9  all-blog my-account">
                <div class="breadcrumb-main">
                    <div class="breadcrumb-container clearfix">
                        <ul class="breadcrumb">
                            <li><a asp-action="Index" asp-controller="Home">Back to Home</a></li>
                            <li><a asp-action="Login" asp-controller="Account">Log In</a></li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <form asp-action="ForgotPassword" asp-controller="Account" method="post" enctype="multipart/form-data" class="form-horizontal well">
                            <fieldset id="account">
                                <legend>Forgot Password</legend>                              
                                <div class="form-group required">
                                    <label name="email" class="col-sm-2 control-label" for="input-email">Email</label>
                                    <div class="col-sm-10">
                                        <input name="email" type="email" value="" placeholder="Email"
                                               id="input-email" class="form-control">
                                    </div>
                                </div>
                                <input type="submit" value="Reset" class="btn btn-primary">
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- .My Account -->

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await Html.PartialAsync("_ScriptsPartial")
}