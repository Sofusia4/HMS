@using HMS.ViewModels;
@model CreateOrUpdateUserViewModel
@{
    Layout = "_PanelLayout";
    string actionName = Model.Id == "create" ? "Create" : "Update";
}

@Html.Partial("_StylesPartial", Model)



<div id="content" class="col-sm-9  all-blog">
    <div class="breadcrumb-main">
        <div class="breadcrumb-container clearfix">
            <h1 class="page-title">@actionName user</h1>
            <ul class="breadcrumb">
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li><a asp-action="Users" asp-controller="Panel">Users</a></li>
                <li><a asp-action="CreateOrUpdateUser" asp-controller="Panel">@actionName</a></li>
            </ul>
        </div>
    </div>
    <div class="information-information">
        <div class="row">
            <div class="col-sm-6">
                <form asp-action="CreateOrUpdateUser" asp-controller="Panel" style="width:690px" method="post" enctype="multipart/form-data" class="form-horizontal well">
                    <fieldset id="account">
                        <legend>@actionName</legend>
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group required">
                            <label asp-for="Email" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input asp-for="Email" type="email" name="email" value="@Model.Email" placeholder="Email" class="form-control">
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="PhoneNumber" class="col-sm-2 control-label">Phone</label>
                            <div class="col-sm-10">
                                <input asp-for="PhoneNumber" type="tel" value="@Model.PhoneNumber" placeholder="Phone number" class="form-control">
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>                        
                        <div class="form-group required">
                            <label asp-for="FirstName" class="col-sm-2 control-label">FirstName</label>
                            <div class="col-sm-10">
                                <input asp-for="FirstName" type="text" name="FirstName" value="@Model.FirstName" placeholder="FirstName" class="form-control">
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="LastName" class="col-sm-2 control-label">LastName</label>
                            <div class="col-sm-10">
                                <input asp-for="LastName" type="text" name="LastName" value="@Model.LastName" placeholder="LastName" class="form-control">
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        
                    </fieldset>
                    @if (Model.Id == "create")
                    {
                        <fieldset>
                            <legend>Password</legend>
                            <div class="form-group required">
                                <label asp-for="Password" class="col-sm-2 control-label" for="input-password">Password</label>
                                <div class="col-sm-10">
                                    <input asp-for="Password" type="password" name="password" value="" placeholder="Password"
                                       id="input-password" class="form-control">
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group required">
                                <label asp-for="PasswordConfirm" class="col-sm-2 control-label" for="input-confirm">
                                    Password
                                    Confirm
                                </label>
                                <div class="col-sm-10">
                                    <input asp-for="PasswordConfirm" type="password"
                                       placeholder="Password Confirm" id="input-confirm" class="form-control">
                                </div>
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>
                        </fieldset>
                    }
                    else
                    {
                        <input type="hidden" asp-for="Password" value="abc123">
                        <input type="hidden" asp-for="PasswordConfirm" value="abc123">
                    }
                    <input type="hidden" asp-for="Id" value="@Model.Id">
                    <input type="submit" value="Save" class="btn btn-primary">

                </form>
            </div>
        </div>
    </div>
</div>