@using HMS.ViewModels;
@model CreateOrUpdateRoomViewModel
@{
    Layout = "_PanelLayout";
    string actionName = Model.Id == "create" ? "Create" : "Update";
}

@Html.Partial("_StylesPartial", Model)



<div id="content" class="col-sm-9  all-blog">
    <div class="breadcrumb-main">
        <div class="breadcrumb-container clearfix">
            <h1 class="page-title">@actionName product</h1>
            <ul class="breadcrumb">
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li><a asp-action="Rooms" asp-controller="Room">Rooms</a></li>
                <li><a asp-action="CreateOrUpdateRoom" asp-controller="Room">@actionName room</a></li>
            </ul>
        </div>
    </div>
    <div class="information-information">
        <div class="row">
            <div class="col-sm-6">
                <form asp-action="CreateOrUpdateRoom" asp-controller="Room" style="width:690px" method="post" enctype="multipart/form-data" class="form-horizontal well">
                    <fieldset id="account">
                        <legend>@actionName room</legend>
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group required">
                            <label asp-for="Number" class="col-sm-2 control-label">Number</label>
                            <div class="col-sm-10">
                                <input asp-for="Number" type="text" name="number" value="@Model.Number" placeholder="Number" class="form-control">
                            </div>
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="RoomType">Roomtype: </label>
                            @Html.DropDownListFor(e => e.RoomType, new SelectList(Enum.GetValues(typeof(RoomType))), Model.RoomType)
                            <span asp-validation-for="RoomType" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="PricePerNight" class="col-sm-2 control-label">PricePerNight</label>
                            <div class="col-sm-10">
                                <input asp-for="PricePerNight" type="text" name="pricepernight" value="@Model.PricePerNight" placeholder="PricePerNight" class="form-control">
                            </div>
                            <span asp-validation-for="PricePerNight" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="Capacity" class="col-sm-2 control-label">Capacity</label>
                            <div class="col-sm-10">
                                <input asp-for="Capacity" type="text" name="capacity" value="@Model.Capacity" placeholder="Capacity" class="form-control">
                            </div>
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                        <div class="form-group required">
                            <label asp-for="Description" class="col-sm-2 control-label">Description</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" name="description" value="@Model.Description" rows="10" class="form-control" placeholder="Description" required></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        

                        <div class="form-group required">
                            <label asp-for="HotelId">Hotel: </label>
                            <select asp-for="HotelId">
                                @foreach(var hotel in Model.AllHotels)
                                {
                                    <option selected="@(Model.HotelId == hotel.Value)" value="@hotel.Value">@hotel.Text</option>
                                }
                            </select>
                            <span asp-validation-for="HotelId" class="text-danger"></span>
                        </div>

                        <div class="form-group required">

                            <div class="bg-image mt-3">
                                @if (Model.FullImageName != null)
                                {
                                    <img src="@Model.FullImageName" class="img-fluid" style="width:100px; height:100px;">
                                }
                                <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
                                    <div class="d-flex justify-content-center align-items-center h-100">
                                        <p class="text-white mb-0">@(Model.Image is null ? "No image selected" : Model.Image)</p>
                                    </div>
                                </div>
                            </div>
                            <input type="file" class="form-control" asp-for="File" value="@Model.File" accept="image/*" />
                            <span asp-validation-for="File" class="text-danger"></span>

                        </div>


                    </fieldset>
                    <input type="hidden" asp-for="@Model.Image" value="create">
                    <input type="hidden" asp-for="@Model.FullImageName" value="create">
                    <input type="hidden" asp-for="Id" value="@Model.Id">
                    <input type="submit" value="Save" class="btn btn-primary">

                </form>
            </div>
        </div>
    </div>
</div>


<script>
    // переопределение валидации на стороне клиента
    $.validator.methods.range = function (value, element, param) {
        var globalizedValue = value.replace(",", ".");
        return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
    }

    $.validator.methods.number = function (value, element) {
        return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
    }
</script>